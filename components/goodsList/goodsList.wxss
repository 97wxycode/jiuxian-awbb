.touch-wrapper{
  margin-top:2rpx;
}
.goods-store .touch-wrapper:last-child>.border-b{
   display:none;
}
.touch-item{
  display: flex;
  overflow: hidden;
}
.border-b{
  width: 90%;
  height: 1rpx;
  background: #e8e8e8;
  float:right;
}
/*隐藏掉滚动条*/
.touch-item::-webkit-scrollbar {
   display: none;
}
.goods-content{
  box-sizing: border-box;
  padding:34rpx 20rpx 0 20rpx;
  flex-shrink: 0;
  width: 750rpx;
  display: flex;
  justify-content: start;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.goods-img{
  height: 150rpx;
  width: 150rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.goods-info{
  display: flex;
  flex:1;
  flex-direction: column;
  height:100%;
}
.goods-name{
  font-size: 26rpx;
  width: 390rpx;
  height: 80rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: pre-wrap;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-beats{
  width: 92rpx;
  height: 36rpx;
  background-color:#e96560;
  font-size: 20rpx;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  margin-top: 15rpx;
}
.goods-price{
  color:#e96560;
  margin-top: 15rpx;
  font-size: 20rpx;
}
.goods-quantity{
  color:#999
}
checkbox{
  margin-right: 20rpx;
}
checkbox .wx-checkbox-input {
background: #fff;
width: 35rpx;
height: 35rpx;
border: 1px solid #999;
border-radius: 50%;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    border-radius: 50%;
    width:53rpx; 
    height:53rpx; 
    text-align:center;
    line-height: 50rpx;
    font-size:30rpx;
    color:#fff;/* 对勾颜色 白色 */
    background-color:#e96560;
    top:17rpx;
    left: 17rpx;  
}
.goods-content checkbox{
  margin-top:44rpx;
}
.counter{
  flex-shrink: 0;
  width: 180rpx;
  height: 48rpx;
  border: 1px solid #666;
  border-radius: 10rpx;
  display: flex;
  justify-content: start;
  align-self: flex-end;
  margin-top: -60rpx;
}
.btn-sub,.btn-add{
  width: 46rpx;
  height:100%;
  flex-shrink: 0;
  text-align: center;
  line-height: 46rpx;
}
.btn-count{
  flex-grow: 1;
  text-align: center;
  border-left: 1px solid #666;
  border-right: 1px solid #666;
}
.goods-del{
  width: 100rpx !important;
  height: 250rpx;
  line-height: 250rpx;
  flex-shrink: 0;
  background: #e96560;
  text-align: center;
  font-size: 22rpx;
  color:#fff;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}


.touch-move-active .goods-del, .touch-move-active .goods-content{
  -webkit-transform: translateX(-100rpx);
  transform: translateX(-100rpx);
}
