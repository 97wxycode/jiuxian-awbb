.search {
  margin: 0 30rpx;
  padding: 0 20rpx;
  width: 87%;
  height: 60rpx;
  display: flex;
  align-items: center;
  background: #f2f2f2;
  border-radius: 30rpx;
  color: #93909f;
  font-size: 25rpx;
}

.search-fixed {
  position: fixed;
  top: 20rpx;
  z-index: 100;
}

.search-sticky {
  width: 100%;
  padding: 20rpx 0;
  position: fixed;
  top: 0;
  z-index: 100;
  background: #fff;
}

.search-icon {
  margin-right: 17rpx;
}