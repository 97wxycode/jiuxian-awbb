.tab-bar {
  height: 80rpx;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-bottom:1px solid #f3f4f5;
}

.tab-bar-border {
  background-color: #c0c2c4;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 27px;
  height: 27px;
}

.tab-bar-item cover-view {
  font-size: 26rpx;
}

.goods-item{
  
  height: 400rpx;
  background: #fff;
  width:100%;
}
.goods-top{
  box-sizing: border-box;
  padding:0 20rpx 0 20rpx;
  height:90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-top-left{
  font-size: 26rpx;
}
.goods-top-left>cover-image{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  border-radius: 5px;
  margin-right: 10rpx;
}
.goods-top-left>text{
  vertical-align: middle;
}
.goods-top-status{
  font-size: 30rpx;
  color:#e96560;
}
.goods-content{
  box-sizing: border-box;
  padding: 20rpx;
  height: 150rpx;
  background: #f9f9f9;
  display: flex;
  justify-content: start;
}
.goods-img{
  height: 110rpx;
  width: 110rpx;
  flex-shrink: 0;
  border: 1px solid #f3f4f5;
  margin-right: 20rpx;
}
.goods-name{
  font-size: 26rpx;
  width: 390rpx;
}
.goods-info{
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.goods-price{
  color:#666
}
.goods-quantity{
  color:#999
}
.goods-price,.goods-quantity{
  font-size: 24rpx;
}



