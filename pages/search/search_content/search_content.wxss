.search-Warp{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  overflow: hidden;
}
.my-history{
  height: 100%;
}
.my-list{
  height: 100%;
}

.MySearchbar{
  background: #fff !important;
  border-bottom: 1px solid #f1f1f1
}
.weui-search-bar__form{
  background-color: #f2f2f2 !important;
  border-radius: 30rpx !important;
}
.weui-search-bar__label{
   background-color: #f2f2f2 !important;
  border-radius: 30rpx !important;
}

/* 搜索历史 */
.searchHistory{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.heard{
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 80rpx;
}
.heard text{
  margin-left: 20rpx;
}
.history-content{
  width: 100%;
  margin-left: 20rpx;
  overflow-y:scroll;
}
.history-item{
  height: 90rpx;
  width: 100%;
  font-size: 28rpx;
  color: #6b6b6b;
  line-height: 90rpx;
  border-bottom: 1px solid #f1f1f1;
}

/* 搜索列表 */
.list-Wrap{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.list-content{
  width: 100%;
  overflow-y: scroll;
}
.list-item{
  height: 90rpx;
  width: 100%;
  border-bottom: 1px solid #f1f1f1;
  margin-left: 20rpx;
  display: flex;
}
.ietmCon{
 height: 90rpx;
 flex: 1;
 color: #ababab;
 font-size: 28rpx;
 line-height: 90rpx;
}

.item-right{
  text-align: right;
} 
.item-right text{
  margin-right: 40rpx;
}
