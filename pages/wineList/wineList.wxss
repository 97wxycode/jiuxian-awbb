.searchWrap{
  width: 100%;
  display: flex;
  border-bottom: 1rpx solid #ddd;
}
.searchContent{
  width: 100%;
  height: 60rpx;
  background-color: #f2f2f2;
  margin: 20rpx 32rpx;
  border-radius: 30rpx;
  display: flex;
}
.search-icon{
  width: 68rpx;
  height: 100%;
  text-align: center;
  line-height: 68rpx;
}
.content{
  flex: 1;
  color: #a0a0a0;
  font-size: 28rpx;
  line-height: 60rpx;
}

.titBox{
  width: 100%;
  display: flex;
  height: 80rpx;
  border-bottom: 1rpx solid #dddddd;
}
.titBox .chooseItem{
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #373737;
}

.wineItem{
  padding-top: 20rpx;
  width: 100%;
  display: flex;
}
.wineItem .imgBox{
  height: 240rpx;
  width: 260rpx;
}
.wineItem .imgBox image{
  width: 240rpx;
  height: 240rpx;
}